<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<!-- verbose should be between 1 and 10 and defines amount of alert messages-->
<suite name="Specific Methods" verbose="3">
    <test name="Methods">
        <classes>
            <class name="tests._01_Basics.C03_Priority">
                <methods>
                    <include name="test02"></include>
                </methods>
            </class>
            <class name="tests._01_Basics.C04_DependsOnMethods">
                <methods>
                    <exclude name="test03"></exclude>
                </methods>
            </class>
        </classes>
    </test>
</suite>